<%- include("../includes/head.ejs") %> <%- include("../nav.ejs") %>
<h1 class="title">Reset Password here</h1>
<form action="/reset-password" method="post" class="form">
  <a href="/login">Go back to Login</a>
  <% if(errorMessage) { %>
  <p class="errorMsg"><%= errorMessage %></p>
  <% } %>
  <input hidden value="<%= csrfToken %>" name="_csrf" />
  <div>
    <label for="email">E-mail</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= oldFormData.email %>"
    />
  </div>
  <div class="btn">
    <button>Reset Password</button>
  </div>
</form>
<%- include("../includes/foot.ejs") %>
