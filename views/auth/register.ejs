<%- include("../includes/head.ejs") %> 
<h1 class="title">Register account here</h1>
<form action="/register" method="post" class="form">
  <a href="/">Go back home</a>
  <% if(errorMessage) { %>
  <p class="warnMsg"><%= errorMessage %></p>
  <% } %>
  <input hidden value="<%= csrfToken %>" name="_csrf" />
  <div>
    <label for="userName">Name</label>
    <input
      type="text"
      id="userName"
      name="userName"
      value="<%= oldFormData.userName  %>"
      required
    />
  </div>
  <div>
    <label for="email">E-mail</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= oldFormData.email  %>"
      required
    />
  </div>
  <div>
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      value="<%= oldFormData.password  %>"
      required
    />
  </div>
  <div class="btn">
    <button><i class="fa-regular fa-user"></i> Register</button>
  </div>
</form>
<%- include("../includes/foot.ejs") %>
