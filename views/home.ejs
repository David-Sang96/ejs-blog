<div class="btn">
  <% if(isLogin) {%>
  <a href="/admin/create-post">add new post as <%= currentUserEmail %> </a>
  <% } %>
</div>
<hr />

<h1>Recent Posts</h1>
<% if(posts.length === 0 && isLogin ){ %>
<div>
  <div class="post-title">No posts</div>
  <div>Create new post</div>
</div>
<% } %>
<div class="cardBox">
  <% for(const post of posts ){ %>
  <div class="card">
    <div class="post-box">
      <div class="post-title"><%= post.title %></div>
      <a href="/post/<%= post.id  %>">Read More...</a>
    </div>
    <p class="post-des"><%=post.description.substr(0,130)%></p>
    <p class="author">Posted by <%=post.userId.userName %></p>
  </div>
  <% } %>
</div>
