<%- include("./includes/head.ejs") %> <%- include("./nav.ejs") %>
<h1 class="title">Add a new post here</h1>
<div class="btn">
  <a href="/">back to home</a>
</div>
<form action="/admin/create" method="post" class="form">
  <% if(errorMessage) { %>
  <p class="errorMsg"><%= errorMessage %></p>
  <% } %>
  <input hidden value="<%= csrfToken %>" name="_csrf" />
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= oldFormData.title  %>"
      required
    />
  </div>
  <div>
    <label for="title">Image</label>
    <input
      type="text"
      id="title"
      name="image"
      required
      value="<%= oldFormData.image  %>"
    />
  </div>
  <div>
    <label for="description">Description</label>
    <textarea cols="30" rows="5" id="description" name="description" required>
<%= oldFormData.description%></textarea
    >
  </div>
  <div class="btn">
    <button>Add Post</button>
  </div>
</form>

<%- include("./includes/foot.ejs") %>
